# ===========================================
# CONFIGURACIÓN GENERAL DEL SERVIDOR
# ===========================================
PORT=3000
NODE_ENV=development

# ===========================================
# CONFIGURACIÓN HYPERLEDGER FABRIC (PRIVADA)
# ===========================================
HYPERLEDGER_NETWORK=fotomultas-network
HYPERLEDGER_CHANNEL=fines-channel
HYPERLEDGER_CHAINCODE=fine-management
HYPERLEDGER_PEERS=grpc://localhost:7051,grpc://localhost:9051
HYPERLEDGER_CA=http://localhost:7054
HYPERLEDGER_ADMIN_USER=admin
HYPERLEDGER_ADMIN_PASSWORD=adminpw

# ===========================================
# CONFIGURACIÓN ETHEREUM (PÚBLICA)
# ===========================================
ETHEREUM_RPC_URL=http://127.0.0.1:8545
ETHEREUM_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
ETHEREUM_CONTRACT_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3
ETHEREUM_GAS_LIMIT=300000
ETHEREUM_GAS_PRICE=20000000000

# ===========================================
# CONFIGURACIÓN IPFS
# ===========================================
IPFS_API_URL=http://127.0.0.1:5001
IPFS_GATEWAY_URL=http://127.0.0.1:8080
IPFS_TIMEOUT=30000
IPFS_RETRY_ATTEMPTS=3

# ===========================================
# CONFIGURACIÓN DE SINCRONIZACIÓN
# ===========================================
SYNC_ENABLED=true
SYNC_INTERVAL=30000
SYNC_TIMEOUT=10000
SYNC_RETRY_ATTEMPTS=3

# ===========================================
# CONFIGURACIÓN DE CACHÉ (REDIS)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600
MEMORY_CACHE_MAX_SIZE=1000
MEMORY_CACHE_TTL=300

# ===========================================
# CONFIGURACIÓN DE COLAS
# ===========================================
REDIS_QUEUE_DB=1
SYNC_QUEUE_CONCURRENCY=5
SYNC_QUEUE_ATTEMPTS=3
SYNC_QUEUE_BACKOFF_TYPE=exponential
SYNC_QUEUE_BACKOFF_DELAY=2000

# ===========================================
# CONFIGURACIÓN DE LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5
LOG_CONSOLE_ENABLED=true
LOG_CONSOLE_COLORIZE=true

# ===========================================
# CONFIGURACIÓN DE MÉTRICAS
# ===========================================
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
METRICS_COLLECT_DEFAULT=true

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_ALGORITHM=HS256
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESS=true
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,PATCH

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fotomultas
DB_USER=postgres
DB_PASSWORD=password

# ===========================================
# CONFIGURACIÓN DE APIs EXTERNAS
# ===========================================
SIMIT_BASE_URL=https://api.simit.com
SIMIT_API_KEY=YOUR_SIMIT_API_KEY
SIMIT_TIMEOUT=10000
SIMIT_RETRY_ATTEMPTS=3

APITUDE_BASE_URL=https://apitude.co/api
APITUDE_API_KEY=YOUR_APITUDE_API_KEY
APITUDE_TIMEOUT=10000
APITUDE_RETRY_ATTEMPTS=3