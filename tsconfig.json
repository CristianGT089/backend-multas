{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@contracts/*": ["contracts/*"],
      "@scripts/*": ["scripts/*"],
      "@test/*": ["test/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifiers": true,
    "transpileOnly": true
  },
  "include": [
    "src/**/*",
    "scripts/**/*", 
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "artifacts",
    "cache",
    "typechain-types"
  ]
} 