{
  "name": "fotomultas-backend",
  "version": "1.0.0",
  "description": "Backend unificado para sistema de fotomultas con Smart Contracts, IPFS y API REST",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "dev:contracts": "hardhat node",
    "build": "tsc",
    "build:contracts": "hardhat compile",
    "build:all": "npm run build:contracts && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:contracts": "hardhat test",
    "test:all": "npm run test:contracts && npm run test",
    "compile": "hardhat compile",
    "node": "hardhat node",
    "deploy": "hardhat run scripts/deploy.mjs --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.mjs --network sepolia",
    "clean": "rm -rf dist artifacts cache typechain-types",
    "clean:all": "npm run clean && rm -rf node_modules"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.3.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "ethers": "^6.14.0",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "ipfs-http-client": "^60.0.1",
    "joi": "^17.13.3",
    "multer": "^1.4.5-lts.2",
    "multiformats": "^13.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.18",
    "@types/supertest": "^6.0.3",
    "chai": "^4.5.0",
    "hardhat": "^2.24.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typechain": "^8.3.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  }
}
